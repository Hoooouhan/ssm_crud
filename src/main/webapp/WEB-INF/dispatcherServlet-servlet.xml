<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd"  >

    <!--SpringMVC的配置文件，包含网站跳转逻辑的控制，配置  -->
    <context:component-scan base-package="com.zhh" use-default-filters="false">  <!-- 指定扫描的总目录  ，并且禁用掉其默认过滤器 -->
        <!-- 只扫描文件夹目录里面的 控制器类 代码  -->
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <!--配置视图解析器，方便页面返回  jsp文件都放在views下-->
    <!--  视图解析器的作用：到时候，controller层方法返回的页面地址，都会去本视图解析器配置的prefix前缀目录下面去找
                举个例子：如果controller返回地址为 ：list ，则服务器会去找 /WEB-INF/views/list.jsp文件，来展示到界面上-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"> <!--前缀 -->
        <property name="prefix" value="/WEB-INF/views/"> </property>  <!-- 后缀  -->
        <property name="suffix" value=".jsp"> </property>
    </bean>

    <!--两个标准配置  -->
    <!-- 将springmvc不能处理的请求交给tomcat -->
    <mvc:default-servlet-handler />
    <!-- 能支持springmvc更高级的一些功能，JSR303校验，快捷的ajax...映射动态请求 -->
    <mvc:annotation-driven/>


</beans>